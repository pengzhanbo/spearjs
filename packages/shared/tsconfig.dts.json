{
  "compilerOptions": {
    "baseUrl": ".",
    "moduleResolution": "node",
    "strict": true,
    "declaration": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "lib": ["DOM", "ESNext"],
    "resolveJsonModule": true,
    "noEmitOnError": true
  },
  "include": ["./src"],
  "exclude": ["dist", "node_modules"]
}

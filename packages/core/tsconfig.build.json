{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": "./",
    "rootDir": "./src",
    "composite": true,
    "emitDeclarationOnly": true,
    "types": ["vite/client"],
    "lib": ["DOM", "ESNext"],
    "jsx": "preserve",
    "paths": {
      "@core/*": ["./src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}

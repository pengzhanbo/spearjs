{
  "name": "@spearjs/server",
  "version": "0.0.1",
  "private": true,
  "description": "",
  "homepage": "https://github.com/pengzhanbo/spearjs#readme",
  "bugs": {
    "url": "https://github.com/pengzhanbo/spearjs/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+git@github.com:pengzhanbo/spearjs.git",
    "directory": "packages/server"
  },
  "license": "ISC",
  "author": "pengzhanbo",
  "type": "module",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build  -p ./tsconfig.build.json",
    "dev": "nest start --watch  -p ./tsconfig.esm.json",
    "dev:debug": "nest start --debug --watch  -p ./tsconfig.esm.json",
    "start": "nest start -p ./tsconfig.esm.json",
    "start:prod": "node dist/main",
    "test": "jest",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "test:watch": "jest --watch"
  },
  "jest": {
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testEnvironment": "node",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    }
  },
  "dependencies": {
    "@nestjs/common": "^9.2.0",
    "@nestjs/config": "^2.2.0",
    "@nestjs/core": "^9.2.0",
    "@nestjs/platform-express": "^9.2.0",
    "@nestjs/serve-static": "^3.0.0",
    "@nestjs/typeorm": "^9.0.1",
    "@spearjs/utils": "workspace:1.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "cookie-parser": "^1.4.6",
    "csurf": "^1.11.0",
    "extract-zip": "^2.0.1",
    "helmet": "^5.1.1",
    "multer": "1.4.5-lts.1",
    "mysql2": "^2.3.3",
    "nanoid": "^3.3.4",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.5.7",
    "typeorm": "^0.3.10"
  },
  "devDependencies": {
    "@nestjs/cli": "^9.1.5",
    "@nestjs/schematics": "^9.0.3",
    "@nestjs/testing": "^9.2.0",
    "@types/cookie-parser": "^1.4.3",
    "@types/express": "^4.17.14",
    "@types/jest": "27.5.0",
    "@types/multer": "^1.4.7",
    "@types/node": "^16.18.3",
    "@types/supertest": "^2.0.12",
    "jest": "28.0.3",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.1",
    "ts-jest": "28.0.1",
    "ts-loader": "^9.4.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "4.0.0",
    "typescript": "^4.9.3"
  }
}

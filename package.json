{
  "name": "@spearjs/monorepo",
  "version": "1.0.0",
  "private": true,
  "keywords": [
    "LowCode",
    "low code",
    "Vue3",
    "Vite",
    "Pnpm",
    "Typescript"
  ],
  "homepage": "https://github.com/pengzhanbo/spearjs#readme",
  "bugs": {
    "url": "https://github.com/pengzhanbo/spearjs/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+git@github.com:pengzhanbo/spearjs.git"
  },
  "type": "module",
  "scripts": {
    "bootstrap": "pnpm install && pnpm --filter=@spearjs/utils --filter=@spearjs/shared build",
    "cm": "cz",
    "dev": "pnpm --filter=@spearjs/editor --filter=@spearjs/server dev",
    "preinstall": "npx only-allow pnpm",
    "lint": "eslint --ext .js,.ts,.tsx,.vue .",
    "prepare": "husky install",
    "release:changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "release:version": "bumpp package.json packages/*/package.json --execute=\"pnpm release:changelog\" --commit \"build: publish v%s\" --all --tag --push"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,vue}": [
      "eslint --cache --fix",
      "prettier --write --cache --ignore-unknown"
    ],
    "*.d.ts": "eslint --cache --fix",
    "*.{css,scss,json,yml,md}": "prettier --write --cache --ignore-unknown",
    "package.json": "sort-package-json"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "prettier": "@pengzhanbo/prettier-config",
  "devDependencies": {
    "@commitlint/cli": "^17.6.5",
    "@commitlint/config-conventional": "^17.6.5",
    "@pengzhanbo/eslint-config-vue": "^0.3.13",
    "@pengzhanbo/prettier-config": "^0.3.13",
    "@pengzhanbo/stylelint-config": "^0.3.13",
    "@types/node": "^18.16.16",
    "bumpp": "^9.1.1",
    "commitizen": "^4.3.0",
    "conventional-changelog-cli": "^3.0.0",
    "eslint": "^8.42.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "only-allow": "^1.1.1",
    "prettier": "^2.8.8",
    "sort-package-json": "^2.4.1",
    "stylelint": "^15.7.0",
    "tsup": "^6.7.0",
    "typescript": "^5.1.3"
  },
  "packageManager": "pnpm@8.5.0",
  "engines": {
    "node": "^14.18.0 || >=16.0.0"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "webpack"
      ]
    }
  }
}
